{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "automerge": true,
  "prHourlyLimit": 50,
  "automergeType": "branch",
  "baseBranches": ["main"],
  "packageRules": [
    {
      "enabled": false,
      "matchPackageNames": ["*"]
    },
    {
      "matchBaseBranches": ["main"],
      "matchPackagePatterns": ["software.amazon.awssdk"],
      "enabled": true,
      "prPriority": 5,
      "matchUpdateTypes": "patch"
    }
  ]
}
